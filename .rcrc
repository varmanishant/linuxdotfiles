# TODO: Make rc as the default shell.
SHELL=rc

sign='> '

fn a {
    # TODO: Should this folder be owned by the user?
    start-silently acme -m /mnt/acme $home/.acme
}

fn cd {
    builtin cd $1 &&
    prompt=(`{basename `{pwd}}^$sign)
}

fn cl {
    cat $* | awk 'length($0) > 79'
}

fn fd {
    builtin fd --color never $*
}

fn ll {
    ls -lrt
}

fn pwd {
    if(~ $#dir 0)
        dir=`{/bin/pwd}
    echo $dir
}

fn python {
    builtin python -q $*
}

fn rg {
    builtin rg --no-heading --line-number $*
}

fn s {
    if(git rev-parse --is-inside-work-tree >[1]/dev/null >[2]/dev/null)
        git grep -n $*
    if not echo "Not implemented."
}

fn shellcheck {
    builtin shellcheck -f gcc $*
}

cd `{pwd}
